{
    "trailingComma": "es5",
    "tabWidth": 4,
    "useTabs": true,
    "semi": false,
    "singleQuote": true,
    "endOfLine": "lf",
    "arrowParens": "avoid",

    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "importOrder": [
        "<THIRD_PARTY_MODULES>",
        "^[@/]",
        "^~/app/(.*)$",
        "^~/processes/(.*)$",
        "^~/pages/(.*)$",
        "^~/widgets/(.*)$",
        "^~/features/(.*)$",
        "^~/entities/(.*)$",
        "^~/shared/(.*)$",
        "^~/(.*)$",
        "^[./]",
        "^[../]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "bracketSpacing": true
}